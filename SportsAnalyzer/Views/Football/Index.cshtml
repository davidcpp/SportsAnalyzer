@model IEnumerable<SportsAnalyzer.Models.FootballTeam>

@{
  Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@ViewBag.Title</h2>
<hr />

<table class="table-hover">
  <tr>
    <th>
      @Html.DisplayNameFor(model => model.Name)
    </th>
    @*<th>
          @Html.DisplayNameFor(model => model.Team_Id)
      </th>*@
    <th>
      @Html.DisplayNameFor(model => model.Country)
    </th>
    <th>
      @Html.DisplayNameFor(model => model.Stadium)
    </th>
    <th>
      @Html.DisplayNameFor(model => model.HomePageURL)
    </th>
    <th>
      @Html.DisplayNameFor(model => model.WIKILink)
    </th>
    <th></th>
  </tr>

  @if (Model != null)
  {
    foreach (var item in Model)
    {
      <tr>
        <td>
          @Html.DisplayFor(modelItem => item.Name)
        </td>
        @*<td>
              @Html.DisplayFor(modelItem => item.Team_Id)
          </td>*@
        <td>
          @Html.DisplayFor(modelItem => item.Country)
        </td>
        <td>
          @Html.DisplayFor(modelItem => item.Stadium)
        </td>
        <td>
          @Html.DisplayFor(modelItem => item.HomePageURL)
        </td>
        <td>
          @Html.DisplayFor(modelItem => item.WIKILink)
        </td>
        @*<td>
              @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
              @Html.ActionLink("Details", "Details", new { id = item.Id }) |
              @Html.ActionLink("Delete", "Delete", new { id = item.Id })
          </td>*@
      </tr>
    }
  }

</table>